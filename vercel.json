{
    "builds": [
        {
            "src": "backend/config/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/config/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/frontend/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/frontend/favicon.ico"
        },
        {
            "src": "/manifest.json",
            "dest": "/frontend/manifest.json"
        },
        {
            "src": "/logo192.png",
            "dest": "/frontend/logo192.png"
        },
        {
            "src": "/(.*)",
            "headers": {
                "Cache-Control": "s-maxage=0"
            },
            "dest": "/frontend/index.html"
        }
    ]
}